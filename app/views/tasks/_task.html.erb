<div class='list'>
  <table>
    <tbody>
      <tr>
        <td><%= task.title %></td>
        <td rowspan='3' class='right-link'>
          <%= link_to 'Remove/Done', task, method: :delete,
            data: { confirm: 'Sure that you dont have to do this task?' } %>

        </td>
      </tr>
      <tr><td class='deadline'><%=  task.deadline || 'no deadline' %></td></tr>
      <tr><td class='description'><%= task.description %></td></tr>
    </tbody>
  </table>
</div>